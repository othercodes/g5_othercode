{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
    <div class="animated-branding" {% if particle.overdelay %}style="background-color:{{ particle.overdelay }};"{% endif %}>
        <div class="g-grid">
            <div class="g-block">
                <div class="g-content {{ particle.class }}">

                    <div class="animated-branding-content">
                    {% if particle.textone %}
                        <h1 class="wow fadeInUp" data-wow-delay="0.5s">{{ particle.textone|raw }}</h1>
                    {% else %}
                        {% if particle.imageone %}
                            <img src="{{ url(particle.imageone) }}" class="wow fadeInUp" data-wow-delay="0.5s"/>
                        {% endif %}
                    {% endif %}

                    {% if particle.texttwo %}
                        <h2 class="wow fadeInUp" data-wow-delay="1s"><em>{{ particle.texttwo|raw }}</em></h2>
                    {% else %}
                        {% if particle.imagetwo %}
                            <img src="{{ url(particle.imagetwo) }}" class="wow fadeInUp" data-wow-delay="1s"/>
                        {% endif %}
                    {% endif %}
                    {% if particle.textthree %}
                        <h3 class="wow fadeInUp" data-wow-delay="1.5s">{{ particle.textthree|raw }}</h3>
                    {% else %}
                        {% if particle.imagethree %}
                            <img src="{{ url(particle.imagethree) }}" class="wow fadeInUp" data-wow-delay="1.5s"/>
                        {% endif %}
                    {% endif %}

                    {% if particle.link and particle.linktext %}
                        <div class="block wow fadeInUp" data-wow-delay="2s">
                            <a href="{{ url(particle.link) }}" class="btn btn-phantom">{{ particle.linktext }}</a>
                        </div>
                    {% endif %}

                    {% if particle.scrollto %}
                        <div class="block wow fadeInUp" data-wow-delay="2.5s">
                            <a href="{{ url(particle.scrollto) }}">
                                <img src="{{ url('gantry-media://shared/bottom-arrow.png') }}" class="main-bottom-arrow" alt="buttom-arrow">
                            </a>
                        </div>
                    {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}