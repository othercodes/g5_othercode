{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
    <div class="animated-branding {% if particle.filter.enable %} filter{% endif %}">
        <div class="intro">
            {% if particle.title %}
                <h1 class="wow fadeInUp" data-wow-delay="0.5s">{{ particle.title|raw }}</h1>
            {% endif %}

            {% if particle.slug %}
                <h2 class="wow fadeInUp" data-wow-delay="1s">{{ particle.slug|raw }}</h2>
            {% endif %}

            {% if particle.text %}
                <p class="wow fadeInUp visible-desktop" data-wow-delay="1.5s">{{ particle.text|raw }}</p>
            {% endif %}

            <a href="{{ url(particle.link) }}">
                <div class="main-bottom-arrow wow fadeInUp" data-wow-delay="2s"
                     style="background-image: url({{ url(particle.arrowimage) }})"></div>
            </a>
        </div>
        <div class="mouse-icon">
            <div class="wheel"></div>
        </div>
    </div>
{% endblock %}